{% set url = '/post.html' %}
<article class="post">
  {% if show_meta %}
    {% include 'includes/post-meta.twig' %}
  {% endif %}
  <figure class="post__media">
    <a href="{{ url }}">
      {% include 'includes/lazy-img.twig' with {
        name: image_name|default('post')
      } %}
    </a>
  </figure>
  <h4 class="post__title">
    <a href="{{ url }}" class="post__link">
      Lorem ipsum dolor sit amet{% if video_icon %}
        <span class="post__icon">
          {% include 'includes/icon.twig' with {
            name: 'play-circle'
          } %}
        </span>
      {% endif %}
    </a>
  </h4>
  <p class="post__text">
    Lorem ipsum dolor sit amet consectetur adipisicing elit. Sit ullamco{% if
      random(2) %}
      deserunt cupidatat elit ea cupidatat quis eu veniam excepteur incididunt
      deserunt cupidatat elit ea cupidatat quis eu veniam excepteur incididunt
      nisi.
    {% endif %}
  </p>
  <div class="post__info">
    <div class="post__credits">
      <p>
        by Author name
      </p>
      <p>
        Illustration by Illustrator Name
      </p>
    </div>
    <div class="post__date">
      <time>February 25, 2020</time>
    </div>
  </div>
</article>
