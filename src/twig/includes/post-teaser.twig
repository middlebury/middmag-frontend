{% set url = '/post.html' %}
<article class="post">
  {% if show_meta %}
    <div class="post__meta">
      <ul class="meta">
        <li class="meta__item">
          <a href="/term-grid.html" class="meta__link">Features</a>
        </li>
        <li class="meta__item">
          <a href="/term-list.html" class="meta__link">Summer 2020</a>
        </li>
      </ul>
    </div>
  {% endif %}
  <figure class="post__media">
    <a href="{{ url }}"><img src="http://placehold.it/720x405" alt="" /></a>
  </figure>
  <h4 class="post__title">
    <a href="{{ url }}" class="post__link">
      Lorem ipsum dolor sit amet{% if video %}
        <span class="post__icon">
          {% include 'includes/icon.twig' with {
            name: 'play-circle'
          } %}
        </span>
      {% endif %}
    </a>
  </h4>
  <p class="post__text">
    Lorem ipsum dolor sit amet consectetur adipisicing elit. Sit ullamco{% if
      random(2) %}
      deserunt cupidatat elit ea cupidatat quis eu veniam excepteur incididunt
      deserunt cupidatat elit ea cupidatat quis eu veniam excepteur incididunt
      nisi.
    {% endif %}
  </p>
  <div class="post__info">
    <div class="post__credits">
      <p>
        by Author name
      </p>
      <p>
        Illustration by Illustrator Name
      </p>
    </div>
    <div class="post__date">
      <time>February 25, 2020</time>
    </div>
  </div>
</article>
