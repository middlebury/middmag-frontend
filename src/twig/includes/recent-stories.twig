<section id="recent-stories"
  aria-labelledby="recent-stories-label"
  class="stories">
  <h2 class="stories__label" id="recent-stories-label">
    Recent stories
  </h2>

  <div class="container">
    <div class="stories__section">
      <h3 class="stories__title">
        <a href="">Features</a>
      </h3>

      <ul class="stories__grid stories__grid--primary posts">
        {% for item in 0..3 %}
          <li class="posts__item">
            {% include 'includes/post-teaser.twig' with {
              image_name: 'post_lg'
            } %}
          </li>
        {% endfor %}
      </ul>
    </div>

    <div class="stories__section">
      <h3 class="stories__title m-0">
        <a href="">Dispatches</a>
      </h3>
      {% include 'includes/dispatches.twig' %}
    </div>

    <div class="stories__grid stories__grid--secondary">
      <div class="stories__section">
        <h3 class="stories__title">
          <a href="">Pursuits</a>
        </h3>
        {% include 'includes/post-teaser.twig' with {
          image_name: 'post_lg'
        } %}
      </div>

      <div class="stories__section">
        <h3 class="stories__title">
          <a href="">Q&A</a>
        </h3>
        {% include 'includes/post-teaser.twig' with {
          image_name: 'post_lg'
        } %}
      </div>
    </div>

    <div class="stories__grid stories__grid--tertiary">
      <div class="stories__section">
        <h3 class="stories__title">
          <a href="">Editor's Note</a>
        </h3>
        {% include 'includes/post-teaser.twig' with {} %}
      </div>

      <div class="stories__section">
        <h3 class="stories__title">
          <a href="">Old Chapel</a>
        </h3>
        {% include 'includes/post-teaser.twig' with {} %}
      </div>

      <div class="stories__section">
        <h3 class="stories__title">
          <a href="">Road Taken</a>
        </h3>
        {% include 'includes/post-teaser.twig' with {} %}
      </div>
    </div>

    <div class="stories__section">
      {% include 'includes/quote.twig' %}
    </div>

    <div class="stories__grid stories__grid--tertiary">
      {# 1st col #}
      <div>
        <div class="stories__section">
          <h3 class="stories__title">
            <a href="">Podcasts</a>
          </h3>

          <ul class="posts">
            {% for item in 0..3 %}
              <li class="posts__item">
                {% include 'includes/post-teaser.twig' with {} %}
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>

      {# 2nd col #}
      <div>
        <div class="stories__section">
          <h3 class="stories__title">
            <a href="">Review</a>
          </h3>

          <ul class="posts">
            <li class="posts__item">
              {% include 'includes/post-teaser.twig' with {} %}
            </li>
          </ul>
        </div>

        <div class="stories__section">
          <h3 class="stories__title">
            <a href="">How did you get here?</a>
          </h3>

          <ul class="posts">
            {% for item in 0..2 %}
              <li class="posts__item">
                {% include 'includes/post-teaser.twig' with {} %}
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>

      {# 3rd col #}
      <div>
        <div class="stories__section">
          <h3 class="stories__title">
            <a href="">Videos</a>
          </h3>
          <ul class="posts">
            {% for item in 0..3 %}
              <li class="posts__item">
                {% include 'includes/post-teaser.twig' with {
                  video_icon: true
                } %}
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
