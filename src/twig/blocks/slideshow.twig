<div class="slideshow swiper-container js-slideshow block block--spaced block--full {{
  multiple
    ? 'slideshow--many'
    : 'slideshow--single'
  }}">
  <button class="slideshow__btn slideshow__btn--prev">
    <span class="slideshow__btn-text">Previous item</span>
    {% include 'includes/icon.twig' with {
      name: 'chevron-left'
    } %}
  </button>

  <button class="slideshow__btn slideshow__btn--next">
    <span class="slideshow__btn-text">Next item</span>
    {% include 'includes/icon.twig' with {
      name: 'chevron-right'
    } %}
  </button>

  <div class="slideshow__list swiper-wrapper">
    {% for i in 0..3 %}
      <figure class="slideshow__item swiper-slide">
        {% include 'includes/lazy-img.twig' with {
          image_name: multiple ? 'slideshow_multiple' : 'post_xl'
        } %}

        <figcaption class="block__caption">
          Lorem ipsum dolor sit amet consectetur adipisicing elit.
          {# description field (the native wp image field) is only because break tag support wasn't added to image caption field, so if we add that, this can be removed as long as the slideshow on this post is migrated http://middleburymagazine.com/features/where-do-we-go-from-here/ #}
          <br />
          description field here
        </figcaption>
      </figure>
    {% endfor %}
  </div>
</div>
